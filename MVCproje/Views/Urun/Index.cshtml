@using MVCproje.Models.Entity
@model List<tblstok>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


    <table id="tbl1" class="table table-bordered">
        <thead>
            <tr>
                <th>Urun Id</th>
                <th>Urun adı</th>
                <th>Urun kategori</th>
                <th>Marka</th>
                <th>Stok</th>
                <th>SİL</th>
                <th>GÜNCELLE</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var urn in Model)
            {
                <tr>
                    <td>@urn.ıd</td>
                    <td>@urn.urunadi</td>
                    <td>@urn.tblkategori.adı</td>
                    <td>@urn.marka</td>
                    <td>@urn.stok</td>
                    <td> @Html.ActionLink("SİL", "SIL", new { id = urn.ıd }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek istediğinize Emin misiniz')" })</td>
                    <td><a href="/URUN/Urunlerigetir/@urn.ıd" class="btn btn-success">GÜNCELLE</a></td>


                </tr>
            }
        </tbody>

    </table>


<a href="/URUN/YeniUrun/" class="btn btn-primary">YENİ URUN EKLE</a>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs/jszip-2.5.0/dt-1.10.18/b-1.5.6/b-html5-1.5.6/fh-3.1.4/datatables.min.js"></script>

<script>

    $('#tbl1').DataTable();

</script>

